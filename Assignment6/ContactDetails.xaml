<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment6.ContactDetails"
             Title="ContactDetails">
    <Grid RowDefinitions="Auto,Auto,*" Padding="20">

        <Image Grid.Row="0"  x:Name="PersonImage" HeightRequest="300"/>
        <Label Grid.Row="1" x:Name="LblPersonName"
        FontSize="Title"/>
        <Label Grid.Row="2" x:Name="LblPersonDesc"
        FontSize="Subtitle"/>

    </Grid>
</ContentPage>